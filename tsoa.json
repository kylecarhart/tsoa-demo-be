{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "src/tsoa",
    "specVersion": 3,
    "host": "localhost:4000",
    "schemes": ["http"]
  },
  "routes": {
    "routesDir": "src/tsoa"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
